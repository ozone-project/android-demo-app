<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ozoneproject.newsallapps.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_homeArticleFragment"
            app:destination="@id/homeArticleFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.ozoneproject.newsallapps.ui.gallery.GalleryFragment"
        android:label="@string/menu_business"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.ozoneproject.newsallapps.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_sport"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/homeArticleFragment"
        android:name="com.ozoneproject.newsallapps.ui.home.HomeArticleFragment"
        android:label="HomeArticleFragment"
        tools:layout="@layout/fragment_home_article"
        />
</navigation>